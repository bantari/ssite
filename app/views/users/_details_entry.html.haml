
- item ||= f.object

.block
  .title= "User Details"
  .inside
    %table.entry
      %tbody
        = RDisplay.row('Name',f.text_field(:name, :class=>'required')+required)
        = RDisplay.row('Title',f.text_field(:title, :class=>'normal')+optional)
        = RDisplay.row('Description',f.text_field(:description, :class=>'normal')+optional)

