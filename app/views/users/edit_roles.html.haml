
- item        ||= @object

= page_title_for item, :edit, 'Details and Roles'

= form_for(item,:url=>'update_roles') do |f|
  = render :partial=>'/shared/entry/errors'

  = render :partial=>'roles_entry', :locals=>{:f=>f}
  = render :partial=>'/shared/entry/editorial_comment', :locals=>{:f=>f}

.buttons.bot.for_form
  = RDisplay.cancel_form_link("/users/#{item.id}")
  = RDisplay.submit_form_link("edit_user_#{item.id}")
