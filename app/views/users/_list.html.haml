
- items  ||= @objects
- sorter ||= controller.action_name == 'index'


%h5= 'Users'
- if items && items.size>0
  %table.list
    %tbody
      %tr
        %th.id.key= RFilterHelper.sort_by_link('ID','id',@filter,sorter)
        %th.str.w200px= RFilterHelper.sort_by_link('Name','name',@filter,sorter)
        %th.str= RFilterHelper.sort_by_link('Email','email',@filter,sorter)
        %th.w300px.aright= 'Roles &amp; Flags'.html_safe

      - reset_cycle
      - items.each do |item|
        %tr{:class=>cycle('odd','even')+row_class_for(item)}
          %td.id.key= RDisplay.id_link(item)
          %td.str.w200px= link_to RDisplay.str(item.name), item, :class=>'low'
          %td.str= link_to RDisplay.str(item.email), item, :class=>'low'
          %td.w300px.aright= item.get_roles_short
  
- else
  = no_items_found
