
- block_id = 'h_search_fields'

.block.help
  .title.clickable.closed{:id=>"#{block_id}_t",:onclick=>"flipBlock('#{block_id}');"}= "<span class='tag'></span>Search Fields Explanation".html_safe
  .content.noshow{:id=>block_id}
    .content_block
      %ul
        %li
          [
          %b= 'Meta Fields'
          = "] --- fields which embedded in the HTML &lt;head&gt; element and visible to search engines like Google"
        %li
          [
          %b= 'Search Fields'
          = "] --- fields which are invisible to search engines but are used by internal website searches (in addition to the Meta Fields)"
        %li
          [
          %b= 'Auto Fields'
          = "] --- same as Search Fields except they are auto-generated by the system at publication time and cannot be edited."
        
