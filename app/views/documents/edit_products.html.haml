
- item  ||= @object

.buttons.top.for_form
  = RDisplay.cancel_form_link("/documents/#{item.id}?show[products]=yes")
  = RDisplay.submit_form_link("edit_document_#{item.id}")

= page_title_for item, :edit, 'Attached Products'

= nested_form_for(item,:url=>"/documents/#{item.id}/update_products") do |f|
  = render :partial=>'/shared/entry/errors'
  
  .block.for_line_items
    .title= 'Attached Products'
    .content
      - f.fields_for :product_documents do |builder|
        = render :partial=>'product_document_fields', :locals=>{:f=>builder}
      = f.link_to_add "Add a Product", :product_documents

  = render :partial=>'/shared/entry/editorial_comment', :locals=>{:f=>f}

.buttons.bot.for_form
  = RDisplay.cancel_form_link("/documents/#{item.id}?show[products]=yes")
  = RDisplay.submit_form_link("edit_document_#{item.id}")
