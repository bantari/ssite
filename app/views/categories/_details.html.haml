
- item ||= @object

.block
  .title= 'Category Details'
  .inside
    %table
      %tbody
        = RDisplay.id_row(item,:class=>'low')
        = RDisplay.data_row(item,:name)
        = RDisplay.data_row(item,:title)

.block
  .title= 'Parent Information'
  .inside
    %table
      %tbody
        = RDisplay.row('Parent',RDisplay.link_to_obj(item.parent))
        = RDisplay.data_row(item,:trace)

